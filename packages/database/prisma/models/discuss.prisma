model Post {
  id         Int      @id
  time       DateTime @db.Timestamp(0)
  topped     Boolean
  locked     Boolean
  replyCount Int

  updatedAt DateTime

  snapshots PostSnapshot[]
  replies   Reply[]

  takedown PostTakedown?

  @@index([time])
  @@index([replyCount(sort: Desc)])
}

model PostSnapshot {
  post   Post @relation(fields: [postId], references: [id])
  postId Int

  author   User @relation(fields: [authorId], references: [id])
  authorId Int

  title     String
  forum     Forum  @relation(fields: [forumSlug], references: [slug])
  forumSlug String

  content String @db.Text

  capturedAt DateTime
  lastSeenAt DateTime

  @@id([postId, capturedAt])
  @@index([postId])
  @@index([authorId])
  @@index([postId, capturedAt(sort: Desc)])
}

model PostTakedown {
  post   Post @relation(fields: [postId], references: [id])
  postId Int  @id

  submitter   User @relation(fields: [submitterId], references: [id])
  submitterId Int

  reason String
}

model Reply {
  id Int @id

  post   Post @relation(fields: [postId], references: [id])
  postId Int

  author   User @relation(fields: [authorId], references: [id])
  authorId Int

  time DateTime @db.Timestamp(0)

  snapshots ReplySnapshot[]
  takedown  ReplyTakedown?

  @@index([postId])
  @@index([authorId])
  @@index([time])
}

model ReplySnapshot {
  reply   Reply @relation(fields: [replyId], references: [id])
  replyId Int

  content String @db.Text

  capturedAt DateTime
  lastSeenAt DateTime

  @@id([replyId, capturedAt])
  @@index([replyId])
  @@index([replyId, capturedAt(sort: Desc)])
}

model ReplyTakedown {
  reply   Reply @relation(fields: [replyId], references: [id])
  replyId Int   @id

  submitter   User @relation(fields: [submitterId], references: [id])
  submitterId Int

  reason String
}

model Forum {
  slug String @id
  name String

  updatedAt DateTime

  postSnapshots PostSnapshot[]
}
