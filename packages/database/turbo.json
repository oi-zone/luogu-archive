{
  "$schema": "https://turborepo.com/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "db:generate"],
      "inputs": ["src/**", "tsconfig.build.json"]
    },
    "db:generate": {
      "inputs": ["prisma.config.ts", "prisma/**/*.prisma"],
      "outputs": ["src/generated/**"]
    }
  }
}
